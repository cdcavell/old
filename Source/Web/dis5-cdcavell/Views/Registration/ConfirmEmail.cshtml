@{ 
    var email = ViewData["Email"] as string;
    var loginUrl = ViewData["LoginUrl"] as string;
}

<h1 class="h2 mb-1">
    Email Confirmation
</h1>
<p class="font-small text-muted">
    Your email address, @email, has been confirmed. You may enable optional two-factor authentication 
    or Login to website. Two-factor authentication is an extra layer of security for access to the website.
</p>

@using (Html.BeginForm("Configuration", "TwoFactor", FormMethod.Post, new { id = "form", suppressSubmit = "false", showWarning = "false" }))
{
    <input type="hidden" id="Email" name="Email" value="@email">
    <div class="card shadow-sm pl-0">
        <div class="card-footer rounded-bottom bg-white border-top-0 m-0 p-0">
            <a id="accountLogin"
                type="button"
                class="btn btn-dark text-light border shadow-sm text-decoration-none m-3 mr-0 p-1 pr-0 px-2 float-right"
                href="@loginUrl">
                <i class="fas fa-sign-in-alt text-grey" aria-hidden="true"></i>
                Login to Website
            </a>

            <button class="btn btn-dark text-light border shadow-sm text-decoration-none m-3 mr-4 p-1 px-2 float-right g-recaptcha"
                    data-action='submit'>
                <i class="fas fa-user-shield text-grey" aria-hidden="true"></i>
                Configure Two-Factor Authentication
            </button>
        </div>
    </div>       

}
